POST_DEFCONFIG_CMDS="check_defconfig && update_lto_config"

function update_lto_config() {
  ${KERNEL_DIR}/scripts/config --file ${OUT_DIR}/.config \
    -e LTO \
    -d LTO_NONE \
    -e LTO_GCC \

  (cd ${OUT_DIR} && \
    make O=${OUT_DIR} $archsubarch CROSS_COMPILE=${CROSS_COMPILE} olddefconfig)
}
